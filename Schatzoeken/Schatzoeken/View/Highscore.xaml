<Page
    x:Class="Schatzoeken.View.Highscore"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Schatzoeken.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="88*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Terug" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Tapped="goBack" FontSize="48" Grid.ColumnSpan="1"/>
            <TextBlock HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Stretch" TextWrapping="Wrap" Text="Highscore" FontSize="48" SelectionHighlightColor="#FF1E113E"/>
        </Grid>        
        <ListBox x:Name="playersInHighscore" HorizontalAlignment="Left" ItemsSource="{Binding}" VerticalAlignment="Stretch" Background="#19FFFFFF" Grid.Row="1" IsEnabled="False"/>
    </Grid>
</Page>
