<Page x:Name="StartPage"
    x:Class="Schatzoeken.View.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Schatzoeken.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/map1.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Start" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Height="141" VerticalAlignment="Top" Width="344" FontWeight="Bold" FontSize="120" FontFamily="Birch Std"/>
        <Grid Grid.Column="0" Grid.Row="0" x:Name="miniMapGrid" HorizontalAlignment="Center" Height="380"  VerticalAlignment="Top" Width="780">
            <Border BorderBrush="Black" BorderThickness="5"/>
            <Grid.Background>
                <ImageBrush ImageSource="/Resources/miniMap.png"/>
            </Grid.Background>
        </Grid>

    </Grid>
</Page>
